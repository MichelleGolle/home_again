<div class="lostandfound">
  <div class="city-form">
    <form>
      <div class="row">
        <div class="large-6 columns">
          <%= form_tag('/tweets/found', action: :found, method: :get) do%>
            <input type="text" placeholder="Search by city or neighborhood and optional keywords" <%= text_area_tag(:city) %>
          <% end %>
        </div>
      </div>
    </form>
  </div>

  <div class="tweets">
    <ul class="small-block-grid-1" id="tweet-list">
    </ul>
  </div>
</div>

<div class="row hidden spinner" id="spinner"><%= image_tag "dog.GIF" %><br></div>

<%= javascript_tag do %>
  $(document).ready(function() {
    fetchFoundPets()
  })
<% end %>
